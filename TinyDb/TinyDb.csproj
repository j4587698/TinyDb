<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net9.0;net8.0</TargetFrameworks>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>latest</LangVersion>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
        <PackageId>TinyDb</PackageId>
        <Version>0.1.0</Version>
        <Authors>TinyDb Team</Authors>
        <Description>TinyDb v0.1 - 早期测试版本，轻量级的AOT兼容单文件NoSQL数据库，内置源码生成器支持</Description>
        <Copyright>Copyright © 2025 TinyDb Team</Copyright>
        <IsAotCompatible>true</IsAotCompatible>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/j4587698/TinyDb</PackageProjectUrl>
        <RepositoryUrl>https://github.com/j4587698/TinyDb</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>nosql;database;aot;embedded;lightweight;sourcegenerator;codegen</PackageTags>

        <!-- NuGet 包高级配置 -->
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <ContinuousIntegrationBuild Condition="'$(CI)' == 'true'">true</ContinuousIntegrationBuild>

        <!-- 开发依赖 -->
        <DevelopmentDependency>false</DevelopmentDependency>

        <!-- 包内容包含配置 -->
        <IncludeBuildOutput>true</IncludeBuildOutput>
        <IncludeContentInPack>true</IncludeContentInPack>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="System.IO.Pipelines" Version="8.0.0" />
        <PackageReference Include="System.Collections.Immutable" Version="8.0.0" />
        <PackageReference Include="System.Memory" Version="4.5.5" />
        <PackageReference Include="System.Threading.Channels" Version="8.0.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="../TinyDb.SourceGenerator/TinyDb.SourceGenerator.csproj"
                          OutputItemType="Analyzer"
                          ReferenceOutputAssembly="false" />
    </ItemGroup>

    <!-- NuGet 包内容配置 -->
    <ItemGroup>
        <!-- 包含 SourceGenerator 作为分析器 -->
        <Analyzer Include="../TinyDb.SourceGenerator/bin/$(Configuration)/netstandard2.0/TinyDb.SourceGenerator.dll"
                  Pack="true"
                  PackagePath="analyzers/dotnet/cs" />

        <!-- 包含 README 和 License -->
        <None Include="../README.md" Pack="true" PackagePath="\" />
        <None Include="../README.md" Pack="true" PackagePath="readme.md" />
        <None Include="../LICENSE" Pack="true" PackagePath="\" />

        <!-- 包含 AOT 配置文件 -->
        <None Include="aot-compatibility.json" Pack="true" PackagePath="content\" />
        <None Include="aot-example.csproj" Pack="true" PackagePath="content\" />

        <!-- 包含 SourceGenerator 依赖的所有文件 -->
        <None Include="../TinyDb.SourceGenerator/bin/$(Configuration)/netstandard2.0/*.dll"
                  Pack="true"
                  PackagePath="analyzers/dotnet/cs" />
    </ItemGroup>

    <!-- 打包前的目标：确保 SourceGenerator 已构建 -->
    <Target Name="BuildSourceGeneratorBeforePack" BeforeTargets="GenerateNuspec">
        <MSBuild Projects="../TinyDb.SourceGenerator/TinyDb.SourceGenerator.csproj"
                 Properties="Configuration=$(Configuration);Platform=$(Platform)"
                 Targets="Build" />
    </Target>

</Project>
