<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>latest</LangVersion>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
        <PackageId>TinyDb</PackageId>
        <Version>0.1.0</Version>
        <Authors>TinyDb Team</Authors>
        <Description>TinyDb v0.1 - 早期测试版本，轻量级的AOT兼容单文件NoSQL数据库</Description>
        <Copyright>Copyright © 2025 TinyDb Team</Copyright>
        <IsAotCompatible>true</IsAotCompatible>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/j4587698/TinyDb</PackageProjectUrl>
        <RepositoryUrl>https://github.com/j4587698/TinyDb</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>nosql;database;aot;embedded;lightweight</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="System.IO.Pipelines" Version="8.0.0" />
        <PackageReference Include="System.Collections.Immutable" Version="8.0.0" />
        <PackageReference Include="System.Memory" Version="4.5.5" />
        <PackageReference Include="System.Threading.Channels" Version="8.0.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="../TinyDb.SourceGenerator/TinyDb.SourceGenerator.csproj"
                          OutputItemType="Analyzer"
                          ReferenceOutputAssembly="false" />
    </ItemGroup>

</Project>
